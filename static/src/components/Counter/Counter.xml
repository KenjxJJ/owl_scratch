<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
   <t t-name="owl_scratch.Counter" owl="1">
       <div class="m-3">
         <div class="row">
             <div class="col-4">
                 <p>Counter: <t t-esc="state.value"/></p>
                 <button class="btn btn-primary " t-on-click="increment">Increment</button>
             </div>
         </div>
        <div class="row mt-3">
           <h2> Todo</h2>
           <div class="col-4">
                <TodoList
                        todos='[{id: 3, description: "buy milk", done: false }, {id: 4, description: "buy eggs", done: true},{id: 5, description: "buy avocado", done: true}]'/>
          </div>
        </div>
       </div>
   </t>

</templates>